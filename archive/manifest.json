{
    "manifest_version": 2,
    "name": "__MSG_extensionName__",
    "description": "__MSG_extensionDescription__",
    "version": "1.0",
    "default_locale": "jp",
    "icons": {
	"96": "/icons/icons8-tag-96.png"
    },
    "permissions": [
        "tabs",
	"activeTab",
        "storage",
	"http://*/*",
	"https://*/*" ,
	"contextMenus",
        "<all_urls>"
    ],
    
    "browser_action": {
	"default_title": "subscribe feed to tiny-tiny-RSSReader",
	"default_popup": "/popup/popup.html",
	"browser_style": true,
	"default_icon": {
	    "96": "/icons/icons8-tag-96.png"
	}
    },
    "options_ui": {
	"page": "/options/options.html"
    },
    
    "background": {
	"scripts": ["/js/background.js"],
	"persistent": true
    }
}
